package com.interax.telephony.server.agi;


import com.interax.telephony.util.InteraxTelephonyConfig;
import com.interax.telephony.util.InteraxTelephonyConfigLoader;


public class InteraxTelephonyAgiServerConfigLoader extends InteraxTelephonyConfigLoader {

	protected static InteraxTelephonyAgiServerConfig config = null;
	
	public static void load() {
		config = (InteraxTelephonyAgiServerConfig)loadConfig("agiserver", InteraxTelephonyAgiServerConfig.class);
	}
	
	public static InteraxTelephonyAgiServerConfig getConfig(){
		if(config == null || InteraxTelephonyConfig.checkReloadConfigFile(InteraxTelephonyAgiServerConfig.class))
			load();
		return config;
	}
	
}
