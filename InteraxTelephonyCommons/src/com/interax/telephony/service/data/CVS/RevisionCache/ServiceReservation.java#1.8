package com.interax.telephony.service.data;

import java.io.Serializable;


public abstract class ServiceReservation implements Serializable {
	private static final long serialVersionUID = 1L;
	
	public static final int UNLIMITED_CALL_TIME = Integer.MAX_VALUE;
	public static final int BASE_TIME_IN_SECONDS = 60;
	
	private long id;
	private int status;
	private Integer availableSeconds;
	private int baseUnit;
	private boolean internCall;
	
	public Integer getAvailableSeconds() {
		return availableSeconds;
	}

	public void setAvailableSeconds(Integer availableSeconds) {
		this.availableSeconds = availableSeconds;
	}
	
	public long getId() {
		return id;
	}

	public void setId(long id) {
		this.id = id;
	}
	
	public ServiceReservationStatus getReservationStatus() {
		return ServiceReservationStatus.values()[this.status];
	}
	public void setReservationStatus(ServiceReservationStatus reservationStatus) {
		this.status = reservationStatus.ordinal();
	}
	public void setReservationStatus(String status) {
		this.status = ServiceReservationStatus.valueOf(status).ordinal();
	}
	
	public ServiceReservationBaseUnit getBaseUnit() {
		return ServiceReservationBaseUnit.values()[this.baseUnit];
	}
	public void setBaseUnit(ServiceReservationBaseUnit baseUnit) {
		this.baseUnit = baseUnit.ordinal();
	}
	public void setBaseUnit(String baseUnit) {
		this.baseUnit = ServiceReservationBaseUnit.valueOf(baseUnit).ordinal();
	}
	public boolean isInternCall() {
		return internCall;
	}
	public void setInternCall(boolean internCall) {
		this.internCall = internCall;
	}
}
